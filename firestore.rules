rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ğŸ”’ Projets
    match /projects/{projectId} {
      // Tout le monde peut lire
      allow read: if true;

      // Seuls les utilisateurs connectÃ©s peuvent crÃ©er
      allow create: if request.auth != null;

      // Autoriser update/delete si :
      // - l'utilisateur est le propriÃ©taire
      // - OU il a le rÃ´le "superadmin" dans la collection users
      allow update, delete: if request.auth != null &&
        (
          request.auth.uid == resource.data.ownerUID ||
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "superadmin"
        );
    }

    // ğŸ”’ Utilisateurs
    match /users/{userId} {
      // Un utilisateur ne peut lire/Ã©crire que son propre document
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
