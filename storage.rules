rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // Fichiers dans le dossier "projects/{userId}/..."
    match /projects/{userId}/{allPaths=**} {

      // Tout le monde peut lire (ex: images publiques)
      allow read: if true;

      // Écriture autorisée si :
      // - l'utilisateur est le propriétaire (userId)
      // - ou si l'utilisateur est superadmin
      allow write: if request.auth != null && (
        request.auth.uid == userId ||
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "superadmin"
      );
    }
  }
}
