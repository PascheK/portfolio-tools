rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {

    // ğŸ”“ Lecture autorisÃ©e Ã  tous les fichiers
    match /{allPaths=**} {
      allow read: if true;
    }

    // ğŸ“ Projets utilisateur : lecture publique, Ã©criture restreinte
    match /projects/{userId}/{allPaths=**} {
      allow write: if request.auth != null && (
        request.auth.uid == userId || 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == "superadmin"
      );
    }

    // ğŸ“ Editeur enrichi : upload autorisÃ© uniquement si connectÃ©
    match /editor/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
